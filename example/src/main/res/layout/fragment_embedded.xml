<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF00"
    android:padding="16dp">

    <TextView
        android:id="@+id/title2"
        style="@style/Widget.MaterialComponents.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/forwardButton"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Embedded Fragment navigating as parent"
        android:fontFamily="serif-monospace"
        android:textSize="32sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/forwardButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/title"
        app:layout_constraintEnd_toStartOf="@id/replaceButton"
        android:text="Forward"/>

    <Button
        android:id="@+id/replaceButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/forwardButton"
        app:layout_constraintEnd_toStartOf="@+id/replaceRootButton"
        app:layout_constraintBottom_toTopOf="@id/title"
        android:text="Replace"/>

    <Button
        android:id="@+id/replaceRootButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/replaceButton"
        app:layout_constraintBottom_toTopOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Replace Root"/>

    <TextView
        android:id="@+id/title"
        style="@style/Widget.MaterialComponents.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/forwardButtonEmbedded"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Embedded Fragment"
        android:fontFamily="serif-monospace"
        android:textSize="32sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/forwardButtonEmbedded"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/replaceButtonEmbedded"
        android:text="Forward"/>

    <Button
        android:id="@+id/replaceButtonEmbedded"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/forwardButtonEmbedded"
        app:layout_constraintEnd_toStartOf="@+id/replaceRootButtonEmbedded"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Replace"/>

    <Button
        android:id="@+id/replaceRootButtonEmbedded"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/replaceButtonEmbedded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Replace Root"/>

</androidx.constraintlayout.widget.ConstraintLayout>